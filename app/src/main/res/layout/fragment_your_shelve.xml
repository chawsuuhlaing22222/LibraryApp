<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.YourShelveFragment">

   <com.padc.csh.libraryapp.customComponents.SmartRecyclerView
       android:id="@+id/rvShelveListInLibray"
       android:visibility="visible"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

 <include
     android:id="@+id/viewPodEmptyShelve"
     android:layout_centerInParent="true"
     layout="@layout/view_pod_empty_shelve"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fbtnCreateShelve"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAccent"
       android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_medium_2"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        android:text="Create new"
        android:clickable="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="50dp"/>


</RelativeLayout>