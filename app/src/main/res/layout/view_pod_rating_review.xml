<?xml version="1.0" encoding="utf-8"?>
<com.padc.csh.libraryapp.viewpods.RatingReviewViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llRating"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvRatingValue"
            android:text="4.9"
            android:fontFamily="@font/inter_bold"
            android:textSize="@dimen/dimen_50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_below="@id/tvRatingValue"
            android:numStars="5"
            android:rating="4"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTotalRating"
            android:text="95 ratings"

            android:textSize="@dimen/text_smaller"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvProgess5"
        android:layout_alignTop="@id/llRating"
        android:text="5"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/llRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvProgess5"
        android:layout_alignTop="@id/tvProgess5"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.padc.csh.libraryapp.customComponents.CustomProgressLine
            android:id="@+id/progessLine5"
            app:progress="30"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="@dimen/dimen_50dp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/tvProgess4"
        android:text="4"
        android:layout_below="@id/tvProgess5"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/llRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.padc.csh.libraryapp.customComponents.CustomProgressLine
        android:id="@+id/progessLine4"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvProgess4"
        android:layout_alignTop="@id/tvProgess4"
        android:layout_marginTop="@dimen/margin_medium"
        app:progress="30"
        android:layout_width="200dp"
        android:layout_height="@dimen/dimen_50dp"/>

    <TextView
        android:id="@+id/tvProgess3"
        android:text="3"
        android:layout_below="@id/tvProgess4"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/llRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.padc.csh.libraryapp.customComponents.CustomProgressLine
        android:id="@+id/progessLine3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvProgess3"
        android:layout_alignTop="@id/tvProgess3"
        android:layout_marginTop="@dimen/margin_medium"
        app:progress="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvProgess2"
        android:text="2"
        android:layout_below="@id/tvProgess3"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/llRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.padc.csh.libraryapp.customComponents.CustomProgressLine
        android:id="@+id/progessLine2"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvProgess2"
        android:layout_alignTop="@id/tvProgess2"
        android:layout_marginTop="@dimen/margin_medium"
        app:progress="30"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvProgess1"
        android:text="1"
        android:layout_below="@id/tvProgess2"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/llRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.padc.csh.libraryapp.customComponents.CustomProgressLine
        android:id="@+id/progessLine1"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvProgess1"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tvProgess1"
        android:layout_marginTop="@dimen/margin_medium"
        app:progress="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</com.padc.csh.libraryapp.viewpods.RatingReviewViewPod>